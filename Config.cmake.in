#https://cmake.org/cmake/help/latest/manual/cmake-packages.7.html#creating-a-package-configuration-file

@PACKAGE_INIT@
include(CMakeFindDependencyMacro)
find_dependency(Qt5 5.8 REQUIRED COMPONENTS Core)

set(LIBQTLAB_INCLUDE_DIR @CMAKE_INSTALL_PREFIX@/@CMAKE_INSTALL_INCLUDEDIR@)

set(_supported_components Core Hamamatsu NI PI Serial)

set(libqtlab_FOUND True)

foreach(_comp ${libqtlab_FIND_COMPONENTS})
  if (NOT ";${_supported_components};" MATCHES ${_comp})
    set(libqtlab_FOUND False)
    set(libqtlab_NOT_FOUND_MESSAGE "Unsupported component: ${_comp}")
  endif()
  include("${CMAKE_CURRENT_LIST_DIR}/${_comp}Targets.cmake"
          RESULT_VARIABLE libqtlab_${_comp}_FOUND)
endforeach()

check_required_components(libqtlab)
